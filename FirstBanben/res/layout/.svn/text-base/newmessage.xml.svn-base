<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".call.BlockList" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <LinearLayout
                android:id="@+id/ll_new_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:padding="10dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/history_new"
                    android:scaleType="centerInside"
                    android:src="@drawable/bnt_call" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/history_new"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/fl_new_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/ll_new_history"
                android:layout_alignTop="@id/ll_new_history"
                android:layout_marginRight="17dp"
                android:layout_marginTop="5dp"
                android:visibility="gone" >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/bg_new_number" />

                <TextView
                    android:id="@+id/tv_new_history"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="@string/int_zero"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </FrameLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <LinearLayout
                android:id="@+id/ll_new_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:padding="10dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/message_new"
                    android:scaleType="centerInside"
                    android:src="@drawable/bnt_news" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/message_new"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/fl_new_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/ll_new_message"
                android:layout_alignTop="@id/ll_new_message"
                android:layout_marginRight="17dp"
                android:layout_marginTop="5dp"
                android:visibility="gone" >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/bg_new_number" />

                <TextView
                    android:id="@+id/tv_new_message"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="@string/int_zero"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </FrameLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <LinearLayout
                android:id="@+id/ll_new_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:padding="10dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/notice_new"
                    android:scaleType="centerInside"
                    android:src="@drawable/bnt_notice" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/notice_new"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/fl_new_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/ll_new_notice"
                android:layout_alignTop="@id/ll_new_notice"
                android:layout_marginRight="17dp"
                android:layout_marginTop="5dp"
                android:visibility="gone" >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/bg_new_number" />

                <TextView
                    android:id="@+id/tv_new_notice"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="@string/int_zero"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </FrameLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

</LinearLayout>