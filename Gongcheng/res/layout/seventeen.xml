<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
  <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/detail_top_bg"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
           android:layout_gravity="center_vertical"
            android:textColor="#426ab3"
             android:paddingLeft="8dp"
            android:text="订单号" />

        <TextView
            android:id="@+id/zixundingdan_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
             android:paddingLeft="8dp"
            android:text="sssss" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/detail_top_bg"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
           android:layout_gravity="center_vertical"
            android:textColor="#426ab3"
             android:paddingLeft="8dp"
            android:text="预约时间" />

        <TextView
            android:id="@+id/zixundingdan_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
             android:paddingLeft="8dp"
            android:text="sssss" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/detail_bottom_bg"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
           android:layout_gravity="center_vertical"
            android:textColor="#426ab3"
            android:paddingLeft="8dp"
            android:text="订单状态" />

        <TextView
            android:id="@+id/zixundingdan_zhuangtai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
             android:paddingLeft="8dp"
            android:text="sssss" />
    </LinearLayout>
</LinearLayout>