<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/all_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/kkk"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sub_title_bg" >

        <ImageButton
            android:id="@+id/xiugaimimabutton_pe"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="0.06"
            android:background="@drawable/sub_title_back_normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="31dp"
            android:layout_weight="0.74"
            android:gravity="center"
            android:text="修改密码"
            android:textColor="#fffffb" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/detail_top_bg"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:paddingLeft="6dp"
            android:layout_gravity="center_vertical"
            android:text="请输入旧密码:" />

        <EditText
            android:id="@+id/shurujiumima_pe"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="@drawable/doctor_send_msg_et"
            android:paddingLeft="5dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/detail_center_bg"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:paddingLeft="6dp"
            android:layout_gravity="center_vertical"
            android:text="请输入新密码:" />

        <EditText
             android:layout_margin="5dp"
            android:id="@+id/shuruxinmima_pe"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/doctor_send_msg_et"
            android:paddingLeft="5dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/detail_bottom_bg"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:layout_gravity="center_vertical"
            android:text="请再次输入新密码:" />

        <EditText
           android:layout_margin="5dp"
            android:id="@+id/zaicishuruxinmima_pe"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/doctor_send_msg_et"
            android:paddingLeft="5dp" />
    </LinearLayout>
    <Button 
        android:id="@+id/xiugaimimaqueren_pe"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/sub_title_bg"
         android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="确认"
        />

</LinearLayout>