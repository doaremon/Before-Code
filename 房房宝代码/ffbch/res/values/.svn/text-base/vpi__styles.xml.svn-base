<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.PageIndicatorDefaults" parent="android:Theme">
        <item name="vpiIconPageIndicatorStyle">@style/Widget.IconPageIndicator</item>
        <item name="vpiTabPageIndicatorStyle">@style/Widget.TabPageIndicator</item>
        <item name="vpiTabPageIndicatorStyleLayout">@style/Widget.TabPageIndicatorLayout</item>
    </style>

    <style name="Widget"></style>

    <style name="Widget.TabPageIndicator" parent="Widget">
        <item name="android:gravity">center</item>
<!--         <item name="android:background">@drawable/vpi__tab_indicator</item> -->
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:textAppearance">@style/TextAppearance.TabPageIndicator</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Widget.TabPageIndicatorLayout" parent="Widget">
        <item name="android:gravity">center</item>
<!--         <item name="android:background">@drawable/vpi__tab_indicator</item> -->
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
    </style>

    <style name="Widget.TabIndicatorTitle" parent="Widget">
        <item name="android:textAppearance">@style/TextAppearance.TabPageIndicator</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextAppearance.TabPageIndicator" parent="Widget">
        <item name="android:textSize">15dip</item>
        <item name="android:textStyle">normal</item>
<!--         <item name="android:textColor">@color/vpi__blue_theme</item> -->
    </style>

    <style name="Widget.IconPageIndicator" parent="Widget">
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
    </style>

</resources>