<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffdcdce0"
    android:orientation="horizontal"
    android:paddingLeft="10.0dip"
    android:paddingRight="10.0dip"
    android:paddingTop="8.0dip" >

    <TextView
        android:id="@id/ibSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="5dip"
        android:focusable="false"
        android:gravity="center_vertical"
        android:paddingBottom="3.0dip"
        android:text="搜索"
        android:textColor="@color/black"
        android:textSize="16.0sp" />


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/ibSearch"
        android:paddingBottom="5.0dip" >

        <EditText
            android:id="@id/actvSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ffb_rc_white2"
            android:drawableLeft="@drawable/ffb_seach"
            android:drawablePadding="5.0dip"
            android:focusable="true"
            android:hint="搜索"
            android:imeOptions="actionDone"
            android:paddingBottom="5.0dip"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:paddingTop="5.0dip"
            android:singleLine="true"
            android:textColorHint="#ffb3b3b3"
            android:textSize="16.0sp" />

        <ImageView
            android:id="@+id/sreach_cearl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="5dip"
            android:src="@drawable/ffb_seach_close"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>