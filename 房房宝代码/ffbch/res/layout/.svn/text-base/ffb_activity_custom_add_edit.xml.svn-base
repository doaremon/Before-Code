<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/pubsub_info_body"
    android:orientation="vertical" >

    <include
        android:id="@+id/rl_chat_nv"
        android:layout_width="match_parent"
        layout="@layout/ffb_actionbar_header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_chat_nv" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@android:color/white"
            android:weightSum="3" >

            <TextView
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="姓\t名"
                android:textSize="20sp" />

            <EditText
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:hint="客户姓名" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="先生" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="女士" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:weightSum="3" >

            <TextView
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="手机号"
                android:textSize="20sp" />

            <EditText
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:layout_weight="2"
                android:hint="手机号" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="选填内容"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:weightSum="3" >

            <TextView
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="购房预算："
                android:textSize="20sp" />

            <EditText
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:layout_weight="2"
                android:hint="123" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:weightSum="3" >

            <TextView
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="常住城市:"
                android:textSize="20sp" />

            <EditText
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:layout_weight="2"
                android:hint="123" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:weightSum="3" >

            <TextView
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="意向购房城市："
                android:textSize="20sp" />

            <EditText
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:layout_weight="2"
                android:hint="手机号" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:weightSum="3" >

            <TextView
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="意向楼盘"
                android:textSize="20sp" />

            <EditText
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:layout_weight="2"
                android:hint="123" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:weightSum="3" >

            <TextView
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="购房目的："
                android:textSize="20sp" />

            <EditText
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:layout_weight="2"
                android:hint="123" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:weightSum="3" >

            <TextView
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="意向看房时间："
                android:textSize="20sp" />

            <EditText
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:layout_weight="2"
                android:hint="123" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:weightSum="3" >

            <TextView
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="被推荐人年龄："
                android:textSize="20sp" />

            <EditText
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:layout_weight="2"
                android:hint="123" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:weightSum="3" >

            <TextView
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="被推荐人资产情况："
                android:textSize="20sp" />

            <EditText
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:layout_weight="2"
                android:hint="手机号" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:weightSum="3" >

            <TextView
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="购房可能性等级"
                android:textSize="20sp" />

            <EditText
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:layout_weight="2"
                android:hint="123" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:minHeight="48dp"
            android:orientation="vertical"
            android:textColor="@color/white"
            android:textSize="16dip" >

            <Button
                android:id="@+id/pubsub_info_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/ffb_bg_btn_blue"
                android:gravity="center"
                android:minHeight="48dp"
                android:text="登        陆"
                android:textColor="@color/white"
                android:textSize="16dip" />
        </LinearLayout>
    </ScrollView>

    <com.ffbao.ui.widget.CombinationControlsView
        android:id="@+id/combination"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignParentBottom="true"
        android:visibility="gone" />

</RelativeLayout>