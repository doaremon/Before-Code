<LinearLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <include layout="@layout/ffb_actionbar_header" />

    <RelativeLayout
        android:id="@id/llPageTwo"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/trend_list_bg" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingTop="@dimen/setting_margin_left" >

            <include layout="@layout/ffb_divider1" />

            <LinearLayout
                style="@style/setting_section_style"
                android:orientation="horizontal" >

                <TextView
                    style="@style/editting_left"
                    android:layout_width="wrap_content"
                    android:layout_weight="0.0"
                    android:text="门店码" />

                <EditText
                    android:id="@id/etInvitationCode"
                    style="@style/editting_right"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/setting_edit_margin_left"
                    android:layout_marginRight="@dimen/setting_margin_right"
                    android:hint="绑定后可修改"
                    android:inputType="number" />
            </LinearLayout>

            <include layout="@layout/ffb_divider1" />

            <Button
                android:id="@id/band_now"
                style="@style/button_style"
                android:layout_marginTop="45.0dip"
                android:text="立即绑定" />

            <Button
                android:id="@id/band_later"
                style="@style/button_style_white"
                android:layout_marginTop="22.0dip"
                android:text="以后再说" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/rlContactToService"
            android:orientation="vertical" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:background="@drawable/ffb_m_bg_repeat" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19.0dip"
                android:layout_marginRight="19.0dip"
                android:layout_marginTop="17.0dip"
                android:text="什么是门店码"
                android:textColor="#ff333333"
                android:textSize="17.0sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18.0dip"
                android:layout_marginLeft="19.0dip"
                android:layout_marginRight="19.0dip"
                android:layout_marginTop="18.0dip"
                android:text="门店码是房房宝合作经纪门店的唯一标识，您可咨询您的店长或致电房房宝经纪服务热线获取。绑定门店码后报备和带看客户可赚取佣金，并享受全行业最快的结佣速度"
                android:textColor="#ff333333"
                android:textSize="15.0sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@id/rlContactToService"
            android:layout_width="fill_parent"
            android:layout_height="56.0dip"
            android:layout_alignParentBottom="true"
            android:background="#ff474749"
            android:orientation="horizontal" >

            <TextView
                android:id="@id/tvServiceNum"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:enabled="false"
                android:gravity="center"
                android:text="400-000-0000"
                android:textColor="#ff06c9b4"
                android:textSize="34.0sp" />

            <TextView
                android:id="@id/tvServiceNum_tag"
                android:layout_width="101.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.0"
                android:background="#ff06c9b4"
                android:enabled="false"
                android:gravity="center"
                android:text="拨打"
                android:textColor="@color/white"
                android:textSize="22.0sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>