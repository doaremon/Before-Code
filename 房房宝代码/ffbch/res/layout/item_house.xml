<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/trend_list_bg"
    android:paddingLeft="@dimen/gap"
    android:paddingRight="@dimen/gap"
    android:paddingTop="7.0dip" >

    <RelativeLayout
        android:id="@id/img_tail_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ffb_list_selector_housedetail" >

        <!-- android:clickable="true"  ffb_defualt_huancunbig -->
        <!-- 在image里面我修改了src   原来ffb_defualt2 -->

        <ImageView
            android:id="@id/floor_item_img"
            android:layout_width="fill_parent"
            android:layout_height="135.0dip"
            android:scaleType="centerCrop"
            android:src="@drawable/ffb_defualt_huancunbig" />
        <!-- 原来的是 src____ffb_mask -->

        <LinearLayout
            android:id="@id/comm_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="-3dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/home_table_money_sanjiao" />

            <TextView
                android:id="@id/commission"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/home_table_mones_ch"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@id/head_tag_new"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/comm_tag" >

            <ImageView
                android:id="@id/head_tag_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:scaleType="fitXY" />

            <LinearLayout
                android:id="@id/banner_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/head_tag_img"
                android:orientation="horizontal"
                android:visibility="gone" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6.0dip"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@id/head_news"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:layout_marginTop="3.0dip"
                    android:ellipsize="end"
                    android:shadowColor="#50000000"
                    android:singleLine="true"
                    android:text="有奖啦有奖啦有奖啦有奖啦有奖啦有奖啦有奖啦有奖啦有奖啦有奖啦有奖啦有奖啦有奖啦"
                    android:textColor="@color/white"
                    android:textSize="15.0sp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@id/floor_img_tail"
            android:layout_width="fill_parent"
            android:layout_height="34.0dip"
            android:layout_alignParentBottom="true"
            android:background="@color/half_transparent_black" >

            <TextView
                android:id="@id/floor_item_price"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:paddingRight="8.0dip"
                android:text="23000元/平"
                android:textColor="@color/white"
                android:textSize="18.0sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="8.0dip"
                android:layout_toLeftOf="@id/floor_item_price"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="2.0dip" >

                <TextView
                    android:id="@id/floor_item_region"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="20.0sp" />

                <TextView
                    android:id="@id/floor_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxWidth="180.0dip"
                    android:singleLine="true"
                    android:text="楼盘名称楼盘名称楼盘名称楼盘名称"
                    android:textColor="@color/white"
                    android:textSize="20.0sp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@id/tail_tag"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_tail_header"
        android:background="@color/white" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="57.0dip"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@id/tag_yongjin"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:clickable="true"
                android:orientation="vertical" >

                <TextView
                    android:id="@id/cooper"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingRight="8.0dip"
                    android:paddingTop="3.0dip"
                    android:text="8000"
                    android:textColor="@color/app_color_black"
                    android:textSize="22.0dip" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="5.0dip"
                    android:paddingRight="8.0dip"
                    android:text="合作经纪人"
                    android:textColor="@color/head_button_text"
                    android:textSize="13.0dip" />
            </LinearLayout>

            <View
                android:layout_width="0.5dip"
                android:layout_height="fill_parent"
                android:layout_marginBottom="11.0dip"
                android:layout_marginTop="11.0dip"
                android:background="@color/lin_2"
                android:gravity="center" />

            <LinearLayout
                android:id="@id/tag_baobei"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:clickable="true"
                android:orientation="vertical" >

                <TextView
                    android:id="@id/will_customer"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingRight="8.0dip"
                    android:paddingTop="3.0dip"
                    android:text="8000"
                    android:textColor="@color/app_color_black"
                    android:textSize="22.0dip" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="5.0dip"
                    android:paddingRight="8.0dip"
                    android:text="意向客户"
                    android:textColor="@color/head_button_text"
                    android:textSize="13.0dip" />
            </LinearLayout>

            <View
                android:layout_width="0.5dip"
                android:layout_height="fill_parent"
                android:layout_marginBottom="11.0dip"
                android:layout_marginTop="11.0dip"
                android:background="@color/lin_2"
                android:gravity="center" />

            <LinearLayout
                android:id="@id/add_customer"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:clickable="true"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="30.0dip"
                    android:drawableLeft="@drawable/ffb_c_icon_add3"
                    android:drawablePadding="3.0dip"
                    android:gravity="center"
                    android:paddingBottom="3.0dip"
                    android:text="客户"
                    android:textColor="@color/orange"
                    android:textSize="20.0sp" />

                <!-- <FrameLayout -->
                <!-- android:layout_width="wrap_content" -->
                <!-- android:layout_height="fill_parent" -->
                <!-- android:gravity="center" -->
                <!-- android:visibility="gone" > -->


                <!-- <ImageView -->
                <!-- android:id="@id/potential_img" -->
                <!-- android:layout_width="wrap_content" -->
                <!-- android:layout_height="fill_parent" -->
                <!-- android:paddingLeft="6.0dip" -->
                <!-- android:scaleType="center" -->
                <!-- android:src="@drawable/h_customer_add" /> -->


                <!-- <TextView -->
                <!-- android:id="@id/potential_text" -->
                <!-- android:layout_width="fill_parent" -->
                <!-- android:layout_height="fill_parent" -->
                <!-- android:gravity="center" -->
                <!-- android:paddingLeft="2.0dip" -->
                <!-- android:textColor="@color/white" -->
                <!-- android:textSize="16.0sp" /> -->
                <!-- </FrameLayout> -->
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:layout_below="@id/tail_tag"
        android:background="#ffc6c6cc" />

</RelativeLayout>