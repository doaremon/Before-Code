<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ffb_list_selector_housedetail"
    android:orientation="vertical"
    android:visibility="gone" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="@drawable/ffb_m_bg_repeat" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:duplicateParentState="true"
        android:gravity="left|center"
        android:minHeight="@dimen/min_area_action"
        android:padding="@dimen/gap" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8.0dip"
            android:src="@drawable/ffb_icon_news" />

        <TextView
            android:id="@id/news"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/gap"
            android:layout_weight="1.0"
            android:singleLine="true"
            android:text="金源一路而下路1188路金源一路而下路1188路"
            android:textColor="@color/ffb_black_white"
            android:textSize="17.0sp" />

        <ImageView
            android:id="@id/icon_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/gap"
            android:paddingRight="5.0dip"
            android:src="@drawable/ffb_arrow_ico" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="#ffc6c6cc" />

</LinearLayout>