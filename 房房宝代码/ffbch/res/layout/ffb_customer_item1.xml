<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@id/customerContent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ffb_list_selector_housedetail"
        android:orientation="horizontal"
        android:padding="16.0dip" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@id/customerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxWidth="100.0dip"
                    android:singleLine="true"
                    android:textColor="@color/commission_item_text_black"
                    android:textSize="19.0sp"
                    android:layout_marginRight="10dip" />

                <TextView
                    android:id="@id/customerPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="0dip"
                    android:singleLine="true"
                    android:text="1560290798977"
                    android:textColor="@color/head_button_text"
                    android:textSize="16.0sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" 
                android:layout_marginTop="15.0dip">

                <TextView
                    android:id="@+id/reportCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxWidth="100.0dip"
                    android:singleLine="true"
                    android:textColor="@color/customer_time_color"
                    android:textSize="15.0sp"
                    android:layout_marginRight="10dip"
                     />

                <TextView
                    android:id="@id/customerTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10-14 13:20"
                    android:textColor="@color/customer_time_color"
                    android:textSize="15.0sp"
                    android:layout_alignParentRight="true" 
                    android:layout_marginLeft="10dip"/>
                <TextView
                    android:id="@+id/reportBuilding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="0dip"
                    android:singleLine="true"
                    android:layout_toRightOf="@id/reportCity"
                    android:layout_toLeftOf="@id/customerTime"
                    android:text="city"
                    android:textSize="16.0sp" />

                
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" >

            <TextView
                android:id="@id/customerDes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:drawablePadding="5.0dip"
                android:padding="5.0dip"
                
                android:textColor="@color/blue_bg_2"
                android:textSize="15.0sp" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@id/line1"
        style="@style/line_style"
        android:layout_marginLeft="16.0dip" />

    <View
        android:id="@id/line2"
        style="@style/line_style"
        android:visibility="gone" />

</LinearLayout>