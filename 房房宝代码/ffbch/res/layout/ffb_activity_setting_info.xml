<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/trend_list_bg"
    android:orientation="vertical" >

    <include layout="@layout/ffb_actionbar_header" />

    <ScrollView
        android:id="@id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingTop="@dimen/setting_margin_left" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <include layout="@layout/ffb_divider1" />

            <LinearLayout
                android:id="@id/activity_info_avatar"
                style="@style/setting_section_large"
                android:layout_width="fill_parent"
                android:layout_height="110dip"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal" >

                <com.ffbao.ui.widget.RoundImageView
                    android:id="@id/activity_info_head"
                    android:layout_width="85.0dip"
                    android:layout_height="85.0dip"
                    android:layout_marginRight="10.0dip"
                    android:src="@drawable/ffb_common_contact_info_avatar" />

                <ImageView
                    android:id="@+id/activity_info_head1"
                    android:layout_width="85.0dip"
                    android:layout_height="85.0dip"
                    android:layout_marginRight="10.0dip"
                    android:visibility="gone" />
            </LinearLayout>

            <include layout="@layout/ffb_divider2" />

            <RelativeLayout
                android:id="@id/activity_info_name"
                style="@style/setting_section_style" >

                <TextView
                    android:id="@id/left_tag"
                    style="@style/setting_left1"
                    android:drawableLeft="@drawable/ffb_set_ziliao_name"
                    android:drawablePadding="10dip"
                    android:text="真实姓名" />

                <ImageView
                    android:id="@id/arrow"
                    style="@style/setting_arrow1"
                    android:layout_alignParentRight="true"
                    android:contentDescription="@string/app_name" />

                <TextView
                    android:id="@id/activity_info_name_text"
                    style="@style/setting_right1"
                    android:layout_marginLeft="11.0dip"
                    android:layout_toLeftOf="@id/arrow"
                    android:layout_toRightOf="@id/left_tag"
                    android:gravity="right|center" />
            </RelativeLayout>

            <include layout="@layout/ffb_divider2" />

            <LinearLayout
                android:id="@id/activity_info_gender"
                style="@style/setting_section_style"
                android:layout_width="fill_parent"
                android:orientation="horizontal" >

                <TextView
                    style="@style/setting_left"
                    android:drawableLeft="@drawable/ffb_set_ziliao_xingbie"
                    android:drawablePadding="10dip"
                    android:text="性别" />

                <TextView
                    android:id="@id/activity_info_gender_text"
                    style="@style/setting_right" />

                <include layout="@layout/ffb_setting_arrow" />
            </LinearLayout>

            <include layout="@layout/ffb_divider2" />

            <LinearLayout
                android:id="@+id/activity_info_qrcode"
                style="@style/setting_section_style"
                android:layout_width="fill_parent"
                android:orientation="horizontal" >

                <TextView
                    style="@style/setting_left"
                    android:drawableLeft="@drawable/ffb_set_ziliao_weixin"
                    android:drawablePadding="10dip"
                    android:text="我的二维码" />

                <TextView
                    android:id="@id/activity_info_gender_text"
                    style="@style/setting_right" />

                <include layout="@layout/ffb_setting_arrow" />
            </LinearLayout>

            <include layout="@layout/ffb_divider1" />

            <include layout="@layout/view_space" />

            <include layout="@layout/ffb_divider1" />

            <LinearLayout
                android:id="@id/activity_info_phone"
                style="@style/setting_section_style"
                android:layout_width="fill_parent"
                android:orientation="horizontal" >

                <TextView
                    style="@style/setting_left"
                    android:drawableLeft="@drawable/ffb_set_ziliao_tel"
                    android:drawablePadding="10dip"
                    android:text="修改绑定手机" />

                <TextView
                    android:id="@id/activity_info_phone_text"
                    style="@style/setting_right" />

                <include layout="@layout/ffb_setting_arrow" />
            </LinearLayout>

            <include layout="@layout/ffb_divider2" />

            <RelativeLayout
                android:id="@id/activity_info_store"
                style="@style/setting_section_style" >

                <TextView
                    android:id="@id/left_info_tag"
                    style="@style/setting_left1"
                    android:drawableLeft="@drawable/ffb_set_ziliao_mendian"
                    android:drawablePadding="10dip"
                    android:text="修改绑定门店" />

                <ImageView
                    android:id="@id/arrow_info"
                    style="@style/setting_arrow1"
                    android:layout_alignParentRight="true"
                    android:contentDescription="@string/app_name" />

                <TextView
                    android:id="@id/activity_info_store_text"
                    style="@style/setting_right1"
                    android:layout_marginLeft="11.0dip"
                    android:layout_toLeftOf="@id/arrow_info"
                    android:layout_toRightOf="@id/left_info_tag"
                    android:gravity="right|center" />
            </RelativeLayout>

            <include layout="@layout/ffb_divider2" />

            <LinearLayout
                android:id="@id/activity_info_password"
                style="@style/setting_section_style"
                android:layout_width="fill_parent"
                android:orientation="horizontal" >

                <TextView
                    style="@style/setting_left"
                    android:drawableLeft="@drawable/ffb_set_ziliao_password"
                    android:drawablePadding="10dip"
                    android:text="修改密码" />

                <include layout="@layout/ffb_setting_arrow" />
            </LinearLayout>

            <include layout="@layout/ffb_divider2" />

            <LinearLayout
                android:id="@+id/addupdbank"
                style="@style/setting_section_style"
                android:layout_width="fill_parent"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/select_bank"
                    style="@style/setting_left"
                    android:drawableLeft="@drawable/bank"
                    android:drawablePadding="10dip"
                    android:text="修改密码" />

                <include layout="@layout/ffb_setting_arrow" />
            </LinearLayout>

            <include layout="@layout/ffb_divider1" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>